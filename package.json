{
  "name": "salestorm",
  "version": "1.0.1",
  "description": "A Shopify app to boost sales.",
  "scripts": {
    "test": "snyk test",
    "graphile": "cd server && DOTENV_CONFIG_PATH=../.env node -r dotenv/config ../node_modules/graphile-migrate/dist/cli.js",
    "dev": "npm run graphile migrate && cross-env NODE_ENV=development PORT=443 nodemon --inspect ./server/index.js --watch ./server/index.js & parcel scripts/startup.js -d public",
    "serve": "shopify serve --host https://loop.rebelzcommerce.com",
    "build": "NEXT_TELEMETRY_DISABLED=1 next build && parcel build scripts/startup.js",
    "release": "npm run graphile migrate && node scripts/startup-to-github",
    "start": "cross-env NODE_ENV=production node ./server/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PascalMayr/salestorm_upsell.git"
  },
  "author": "Pascal Mayr, Sascha Mayr",
  "engines": {
    "node": ">=15.3.0"
  },
  "dependencies": {
    "@apollo/client": "^3.3.16",
    "@babel/core": "^7.12.3",
    "@babel/polyfill": "^7.6.0",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.10",
    "@babel/register": "^7.6.2",
    "@koa/cors": "^3.1.0",
    "@sendgrid/mail": "^7.4.2",
    "@sentry/node": "^6.2.3",
    "@sentry/react": "^6.2.3",
    "@sentry/tracing": "^6.2.3",
    "@shopify/app-bridge": "^1.30.0",
    "@shopify/app-bridge-react": "^1.15.0",
    "@shopify/app-bridge-utils": "^1.30.0",
    "@shopify/app-cli-node-generator-helper": "^1.1.2",
    "@shopify/koa-shopify-auth": "^4.1.2",
    "@shopify/koa-shopify-webhooks": "^2.3.1",
    "@shopify/polaris": "^6.2.0",
    "@shopify/polaris-icons": "^4.1.0",
    "@shopify/shopify-api": "^1.2.1",
    "@zeit/next-css": "^1.0.1",
