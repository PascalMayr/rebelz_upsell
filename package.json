    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-plugin-sort-class-members": "1.11.0",
    "husky": "6.0.0",
    "lint-staged": "11.0.0",
    "nodemon": "2.0.12",
    "prettier": "2.3.1",
    "snyk": "1.642.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md}": [
      "prettier --write"
    ]
  }
