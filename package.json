    "lodash": "4.17.21",
    "luxon": "1.27.0",
    "next": "11.1.1",
    "next-env": "1.1.1",
    "node-fetch": "2.6.2",
    "parcel-bundler": "1.12.5",
    "pg": "8.6.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "sass": "1.35.1",
    "shopify": "0.1.0",
    "tinycolor2": "1.4.2"
