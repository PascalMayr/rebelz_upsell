  "devDependencies": {
    "@babel/plugin-transform-runtime": "7.14.5",
    "@babel/preset-stage-3": "7.8.3",
    "@shopify/eslint-plugin": "40.4.0",
    "babel-register": "6.26.0",
    "enzyme": "3.11.0",
